{
  "scripts": {
    "dev": "parcel src/index.html --no-cache",
    "build": "parcel build src/index.html --no-source-maps --detailed-report --public-url ./",
    "lint": "eslint \"./src/**/*.{js,jsx}\" --fix",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "clean": "rmdir dist /s /q & rmdir .cache /s /q",
    "push": "git subtree push --prefix dist origin gh-pages"
  },
  "dependencies": {
    "classcat": "^4.1.0",
    "hyperapp": "^2.0.4",
    "sanitize.css": "^11.0.0",
    "uuid": "^8.3.1",
    "xstate": "^4.13.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "babel-eslint": "^10.1.0",
    "babel-plugin-jsx-pragmatic": "^1.0.2",
    "eslint": "^6.7.2",
    "eslint-config-babel": "^9.0.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-node": "^9.2.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-standard": "^4.0.1",
    "parcel": "^1.12.4",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-static-files-copy": "^2.5.0",
    "parcel-plugin-sw-precache": "^1.1.2",
    "postcss-modules": "^1.5.0",
    "postcss-nested": "^4.2.1",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^1.19.1",
    "typescript": "^3.8.3",
    "typescript-plugin-css-modules": "^2.2.0"
  },
  "babel": {
    "plugins": [
      [
        "babel-plugin-jsx-pragmatic",
        {
          "module": "hyperapp",
          "import": "h",
          "export": "h"
        }
      ]
    ]
  },
  "sw-precache": {
    "maximumFileSizeToCacheInBytes": 10485760
  }
}
